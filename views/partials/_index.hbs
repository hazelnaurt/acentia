<!-- Start Slider Area -->
<div class="slider__container">
  <div class="slider__activation__wrap owl-carousel owl-theme">
    <!-- Start Single Slide -->
    {{#each homeSlider}}
      <div
        class="slide slider__fixed--height slide__align--center"
        style="background: rgba(0, 0, 0, 0) url(images/slider/bg/{{this.url}}) no-repeat scroll 0 0 / cover;"
        data--black__overlay="6"
      >
        <div class="container">
          <div class="row">
            <div class="col-md-12 col-lg-12">
              <div class="slider__inner">
                <!-- <h4>SCIENCE 1953</h4> -->
                <h1>{{this.title}}</h1>
                <p>{{this.desc}}</p>
                <div class="slider__btn">
                  <a class="htc__btn" href="contact.html">CONTACT US</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="htc__slider__fornt__img">
          <img src="images/slider/fornt-img/1.png" alt="slider images" />
        </div>
      </div>
    {{/each}}
    <!-- End Single Slide -->
  </div>
</div>

<!-- Start Offer Area -->
<section class="htc__offer__area htc__offer--2 pb--120 bg__gray">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-lg-4 hidden-sm col-xs-12 xmt-40"></div>
      {{#each homeOffer}}
        <div class="col-md-4 col-lg-4 col-sm-6 col-xs-12">
          <div class="offer foo">
            <div class="offer__icon">
              <img src="images/others/icon-2/1.png" alt="icon images" />
            </div>
            <div class="offer__details">
              <h2><a href="#">{{this.title}}</a></h2>
              <p>{{this.desc}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>

<!-- Start About Area -->
<section class="htc__about__area about--2 text__pos ptb--150 bg__white">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="section__title text-center foo">
          <h2 class="title__line">
            ABOUT
            <span class="text--theme">ACENTIA</span>
          </h2>
          <p>
            {{homeAbout.about}}
          </p>
        </div>
      </div>
    </div>
    <div class="row mt--70">
      {{#each homeVisionMission}}
        <div class="{{this.class}}">
          {{#if double}}
            <div class="about foo">
              <div class="about__inner">
                <h2>{{this.title}}</h2>
                <p>{{this.desc}}</p>
                {{#if this.image}}
                  <div class="about__icon">
                    <img
                      src="images/others/icon/{{this.image}}"
                      alt="icon images"
                    />
                  </div>
                {{/if}}
              </div>
              <div class="about__inner about__hober__info active">
                <h2>{{this.title}}</h2>
                <p>{{this.desc}}</p>
                {{#if this.image}}
                  <div class="about__icon">
                    <img
                      src="images/others/icon/{{this.image}}"
                      alt="icon images"
                    />
                  </div>
                {{/if}}
              </div>
            </div>
          {{else}}
            <div class="about foo">
              <div class="about__inner">
                <h2>{{this.title}}</h2>
                <p>{{this.desc}}</p>
                {{#if this.image}}
                  <div class="about__icon">
                    <img
                      src="images/others/icon/{{this.image}}"
                      alt="icon images"
                    />
                  </div>
                {{/if}}
              </div>
            </div>
          {{/if}}
        </div>
      {{/each}}
    </div>
  </div>
  <div class="text__shape">
    <h2>ACENTIA</h2>
  </div>
</section>

<!-- start Service Area -->
<section class="htc__service__area service--2 bg__gray">
  <div class="container-fluid">
    <div class="row">
      <div class="service__section__wrap clearfix">
        <!-- Start Single Service -->
        <div class="col-md-4 col-lg-4 col-sm-12 col-xs-12">
          <div class="service__thumb">
            <img src="images/about/{{homeServDesc.bigIMG}}" alt="about image" />
          </div>
        </div>
        <!-- End Single Service -->
        <div
          class="col-md-8 col-lg-8 col-sm-12 col-xs-12 h1__service pt--40 pb--30"
        >
          <div class="row">
            <div class="col-xs-12">
              <div class="section__title text-left foo">
                <h2 class="title__line">OUR
                  <span class="text--theme">SERVICES</span></h2>
                <p>{{homeServDesc.Desc}}</p>
              </div>
            </div>
          </div>
          <div class="row">
            {{#each homeServices}}
              <!-- Start Single Service -->
              <div class="col-md-4 col-lg-4 col-sm-4 col-xs-12">
                <div class="service foo">
                  <div class="service__thumb">
                    <a href="single-service-eng.html">
                      <img
                        src="/images/service/{{this.img}}"
                        alt="service images"
                      />
                    </a>
                    <div class="service__hover">
                      <div class="service__action">
                        <a href="/services/{{this.link}}">DETAILS</a>
                      </div>
                    </div>
                  </div>
                  <div class="service__details">
                    <h2><a
                        href="/services/{{this.link}}"
                      >{{this.serv_name}}</a></h2>
                  </div>
                </div>
              </div>
              <!-- End Single Service -->
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Start Latest Project Area -->
<section class="htc__latest__project__area ptb--150 bg__white text__pos">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="section__title text-center foo">
          <h2 class="title__line">LATEST
            <span class="text--theme">EVENTS</span></h2>
          <p>{{project.Desc}}</p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="htc__latest__project__wrap h1__project clearfix mt--30">
        <!-- Start Single Project -->
        <div class="col-md-5 col-lg-5 hidden-sm col-xs-12">
          <div class="project__itm foo">
            <div class="project__thumb">
              <a href="/{{project.link}}">
                <img
                  src="/images/lst-project-3/{{project.bgIMG}}"
                  alt="project images"
                />
              </a>
              <div class="project__hover__info">
                <div class="project__action">
                  <h2><a href="/{{project.link}}">{{project.name}}</a></h2>
                  <h4>{{project.date}}</h4>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- End Single Project -->
        <div class="col-md-7 col-lg-7 col-sm-12 col-xs-12">
          <div class="row">
            {{#each projectList}}
              <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="project__itm foo">
                  <div class="project__thumb">
                    <a href="/{{this.link}}">
                      <img
                        src="/images/lst-project-3/{{this.img}}"
                        alt="project images"
                      />
                    </a>
                    <div class="project__hover__info">
                      <div class="project__action">
                        <h2><a href="/{{this.link}}">{{this.name}}</a></h2>
                        <h4>{{this.date}}</h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="text__shape">
    <h2>EVENTS</h2>
  </div>
</section>

<!-- Start Counter Up Area -->
<section class="htc__counterup__area h1__countdown bg__gray">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-sm-12 col-xs-12">
                <div class="counterup__left__thumb">
                    <img src="images/about/4.png" alt="images">
                </div>
            </div>
            <div class="col-md-8 col-sm-12 col-xs-12">
                <div class="htc__callto__action">
                    <h2><span class="text--theme">CUSTOMER-CENTRIC,</h2>
                    <h2>RESULTS-DRIVEN</h2>
                    <p>We get our customers to their targets, with a great amount of efficiency and precision.</p>
                </div>
            </div>
        </div>
    </div>
</section>